<h1>Sign In</h1>
<%= form_tag("/sign_in") do |f| %>
	<div class="mb-3">
		<%= label_tag :citizen_id ,"Citizen ID" %>
		<%= text_field_tag :citizen_id ,"", class: "form-control" %>	
	</div>
	<div class="mb-3">
		<%= label_tag :password ,"password" %>
		<%= password_field_tag :password,"", class: "form-control" %>	
	</div>
	<div class="mb-3">
	<%= submit_tag "Sign In", class: "btn btn-primary" %>
	</div>
<% end %>
  